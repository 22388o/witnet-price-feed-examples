{
  "name": "witnet-price-feed-examples",
  "version": "0.3.1",
  "description": "Price feed examples using the Witnet decentralized oracle network",
  "main": "",
  "repository": "https://github.com/witnet/witnet-pricefeed-examples",
  "author": "Witnet Devs <devs@witnet.io>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "npx truffle test",
    "console": "npx truffle console",
    "compile": "npm run compile-contracts",
    "compile-requests": "npx rad2sol",
    "compile-contracts": "npm run postinstall && npx truffle compile",
    "compile-flattened": "npx truffle compile --all --config flattened-config.js ",
    "coverage": "solidity-coverage",
    "flatten": "rm -rf \"contracts/flattened\" && mkdir -p \"contracts/flattened\" && npx truffle-flattener contracts/*/*.sol > contracts/flattened/Flattened.sol",
    "fmt": "solhint --max-warnings 0 \"contracts/**/*.sol\" && eslint ./test && solhint \"test/**/*.sol\"",
    "fmt!": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix && eslint ./test --fix && solhint \"test/**/*.sol\" --fix",
    "postinstall": "rm -rf \"build/contracts\" && mkdir -p \"build/contracts\" && cp node_modules/witnet-ethereum-bridge/build/contracts/Witnet.json node_modules/witnet-ethereum-bridge/build/contracts/WitnetRequestBoardInterface.json build/contracts",
    "solium": "solium -d contracts",
    "solium:fix": "solium -d contracts --fix",
    "migrate": "npx truffle migrate",
    "migrate-flattened": "npm run flatten && npx truffle migrate --config flattened-config.js",
    "verify-flattened": "npx truffle run verify"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.1.0",
    "adomedianizer": "git+https://github.com/adoracles/ado-contracts",
    "openzeppelin-solidity": "^2.4.0",
    "witnet-ethereum-bridge": "git+https://github.com/guidiaz/witnet-ethereum-bridge#destructible-drs-mono-interface",
    "witnet-requests": "git+https://github.com/guidiaz/witnet-requests-js#0.3.1"
  },
  "devDependencies": {
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "ganache-cli": "6.12.2",
    "node-eval": "2.0.0",
    "protocol-buffers": "4.2.0",
    "solhint": "3.3.4",
    "solidity-coverage": "0.7.16",
    "truffle": "5.3.1",
    "truffle-assertions": "0.9.2",
    "truffle-flattener": "git+https://github.com/witnet/truffle-flattener.git#single-experimental",
    "truffle-plugin-verify": "0.5.7",
    "truffle-verify": "1.0.8"
  }
}
