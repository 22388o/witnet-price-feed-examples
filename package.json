{
  "name": "witnet-price-feed-examples",
  "version": "0.3.3",
  "description": "ERC2362 Pricefeed examples using the Witnet decentralized oracle network",
  "main": "",
  "repository": "https://github.com/witnet/witnet-price-feed-examples",
  "author": "Witnet Devs <devs@witnet.io>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "avail": "npm run avail:examples && npm run avail:networks",
    "avail:examples": "npm run clean:requests && npm run compile:requests && node ./scripts/avail-examples.js 2>&1",
    "avail:networks": "node ./scripts/avail-networks.js 2>&1",
    "console": "npx truffle console",
    "clean": "npm run clean:build && npm rum clean:flattened && npm run clean:migrations && npm run clean:requests && npm run postinstall",
    "clean:build": "node ./scripts/clean.js build/",
    "clean:flattened": "node ./scripts/clean.js flattened/",
    "clean:migrations": "node ./scripts/clean.js migrations/addresses.json migrations/radons.json",
    "clean:requests": "node ./scripts/clean.js contracts/requests/",    
    "compile": "npm run compile:contracts",
    "compile:requests": "npx rad2sol",
    "compile:contracts": "npm run clean:flattened && npm run postinstall && npm run compile:requests && npx truffle compile --all",
    "coverage": "solidity-coverage",
    "flatten": "npm run compile:requests && node ./scripts/flatten.js contracts/ 2>&1",    
    "fmt": "solhint --max-warnings 0 \"contracts/**/*.sol\" && eslint ./test && eslint ./scripts/*.js && solhint \"test/**/*.sol\"",
    "fmt!": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix && eslint ./test --fix && eslint ./scripts/*.js --fix && solhint \"test/**/*.sol\" --fix",
    "migrate": "node ./migrations/scripts/1.js",
    "migrate-flattened": "node ./scripts/flattened-migrate.js 2>&1",    
    "postinstall": "node ./scripts/postinstall.js 2>&1",
    "solium": "solium -d contracts",
    "solium:fix": "solium -d contracts --fix",
    "test": "npx truffle test",
    "verify-flattened": "node ./scripts/flattened-verify.js 2>&1"
  },
  "dependencies": {
    "@eth-optimism/solc": "^0.7.6-alpha.1",
    "@openzeppelin/contracts": "^4.1.0",
    "adomedianizer": "https://github.com/adoracles/ado-contracts",
    "openzeppelin-solidity": "^2.4.0",
    "witnet-ethereum-bridge": "https://github.com/guidiaz/witnet-ethereum-bridge#0.3.3-realm-agnostic-migrations",
    "witnet-requests": "https://github.com/guidiaz/witnet-requests-js#0.3.x"
  },
  "devDependencies": {
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "eth-gas-reporter": "0.2.22",
    "ganache-cli": "6.12.2",
    "node-eval": "2.0.0",
    "protocol-buffers": "4.2.0",
    "solhint": "3.3.4",
    "solidity-coverage": "0.7.16",
    "truffle": "5.3.1",
    "truffle-assertions": "0.9.2",
    "truffle-flattener": "https://github.com/witnet/truffle-flattener.git#single-experimental",
    "truffle-plugin-verify": "0.5.7",
    "truffle-verify": "1.0.8"
  }
}
